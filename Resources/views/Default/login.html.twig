{% extends 'AcmeDemoBundle::layout.html.twig' %}

{% block content %}
    <h1>Login</h1>

    {% if error is defined %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("_login") }}" method="post" id="login">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="crowd_auth_login[_username]" value="{{ last_username }}" />
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="crowd_auth_login[_password]" />
        </div>

        <input type="submit" class="symfony-button-grey" value="LOGIN" />
    </form>
{% endblock %}

